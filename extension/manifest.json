{
  "name": "summarizooor",
  "description": "Summarise any webpage with a single click",
  "version": "0.0.0.3",
  "manifest_version": 3,

  "action": {
    "default_popup": "index.html",
    "default_title": "Summarise this!"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "permissions": ["contextMenus", "tabs", "storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "css": ["content.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["*/static/*/*"]
    }
  ]
}
