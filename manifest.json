{
  "name": "tl;dr generator",
  "description": "Reduce reading time by generating summaries!",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarise this!"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["contextMenus", "tabs", "storage", "scripting"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "open_chatgpt": {
      "description": "Open ChatGPT in new tab",
      "suggested_key": "Ctrl+Shift+Y"
    },
    "generate_summary": {
      "description": "Generate summary",
      "suggested_key": "Ctrl+Shift+E"
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["https://*/*"],
      "resources": ["content.css", "fonts/*"]
    }
  ]
}
