{
  "name": "AI Powered Email Summariser",
  "description": "Summarise your emails!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarise this email"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["contextMenus", "tabs", "storage", "scripting"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"],
      "css": ["content.css"]
    }
  ]
}
